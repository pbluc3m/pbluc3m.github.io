  <div style="font-weight: 600; font-size: 1.1rem; color: #002b54;">
    <%= item.title %>
    <% if (item.path) { %>
      <a href="<%= item.path %>" target="_blank" style="margin-left: 10px; font-size: 0.8rem; background: #004884; color: white; padding: 2px 8px; border-radius: 4px; text-decoration: none;">PDF SLIDES</a>
    <% } %>
  </div>
  <div style="color: #444;">
    <strong><%= item.venue %></strong> â€” <%= item.date %>
  </div>
  <div style="font-size: 0.9rem; color: #888; margin-top: 4px;">
    Tags: <%= item.categories.join(", ") %>
  </div>
</div>
<% } %>